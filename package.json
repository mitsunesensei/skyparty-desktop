{
  "name": "skyparty-desktop",
  "version": "1.0.0",
  "description": "SkyParty Desktop Application with Railway Integration",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "server": "node server.js"
  },
  "keywords": [
    "skyparty",
    "desktop",
    "electron",
    "railway",
    "postgresql"
  ],
  "author": "SkyParty Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.skyparty.desktop",
    "productName": "SkyParty",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "skypartyonline2.html",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "icon.ico",
      "sign": false
    },
    "forceCodeSigning": false
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
